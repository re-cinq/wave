{
"$schema": "http://json-schema.org/draft-07/schema#",
"type": "object",
"required": ["test_type", "target_component", "test_cases", "framework"],
"properties": {
"test_type": {
"type": "string",
"enum": ["unit", "integration", "e2e", "functional"],
"description": "Type of test to create"
},
"target_component": {
"type": "string",
"description": "Component, function, or module to test"
},
"test_file_path": {
"type": "string",
"description": "Path where the test file should be created"
},
"framework": {
"type": "string",
"description": "Testing framework to use"
},
"test_cases": {
"type": "array",
"items": {
"type": "object",
"required": ["name", "description", "expected_outcome"],
"properties": {
"name": {"type": "string"},
"description": {"type": "string"},
"expected_outcome": {"type": "string"},
"setup": {"type": "string"},
"teardown": {"type": "string"}
}
}
},
"dependencies": {
"type": "array",
"items": {"type": "string"},
"description": "Required dependencies or imports"
}
}
}