{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "tech_stack",
    "architecture",
    "features",
    "approach"
  ],
  "properties": {
    "tech_stack": {
      "type": "object",
      "properties": {
        "frontend": {
          "type": "string"
        },
        "backend": {
          "type": "string"
        },
        "database": {
          "type": "string"
        },
        "deployment": {
          "type": "string"
        }
      }
    },
    "architecture": {
      "type": "object",
      "properties": {
        "pattern": {
          "type": "string"
        },
        "structure": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "approach": {
      "type": "object",
      "properties": {
        "methodology": {
          "type": "string"
        },
        "phases": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}