{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Implementation plan for an issue specification",
  "required": [
    "issue_id",
    "tasks"
  ],
  "properties": {
    "issue_id": {
      "type": "string",
      "description": "The issue ID this plan addresses"
    },
    "spec_reference": {
      "type": "string",
      "description": "Reference to the specification artifact"
    },
    "tasks": {
      "type": "array",
      "description": "Ordered list of implementation tasks",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "order"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Task identifier"
          },
          "title": {
            "type": "string",
            "description": "Brief task title"
          },
          "description": {
            "type": "string",
            "description": "Detailed task description"
          },
          "order": {
            "type": "integer",
            "description": "Execution order (1-based)"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "IDs of tasks this depends on"
          },
          "file_changes": {
            "type": "array",
            "description": "Files to be modified in this task",
            "items": {
              "type": "object",
              "required": [
                "path",
                "action"
              ],
              "properties": {
                "path": {
                  "type": "string"
                },
                "action": {
                  "type": "string",
                  "enum": [
                    "create",
                    "modify",
                    "delete"
                  ]
                },
                "changes_description": {
                  "type": "string"
                }
              }
            }
          },
          "verification": {
            "type": "object",
            "properties": {
              "command": {
                "type": "string",
                "description": "Command to verify task completion"
              },
              "expected_outcome": {
                "type": "string",
                "description": "What success looks like"
              }
            }
          },
          "risks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "risk": {
                  "type": "string"
                },
                "mitigation": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "overall_verification": {
      "type": "object",
      "description": "Final verification after all tasks",
      "properties": {
        "tests_to_run": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "manual_checks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}