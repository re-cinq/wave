{
"$schema": "http://json-schema.org/draft-07/schema#",
"type": "object",
"required": ["executive_summary", "critical_findings", "action_plan", "implementation_roadmap", "success_metrics", "recommendations"],
"properties": {
"executive_summary": {
"type": "object",
"required": ["overall_health_score", "critical_issues_count", "medium_issues_count", "estimated_effort", "risk_assessment"],
"properties": {
"overall_health_score": {"type": "integer", "minimum": 0, "maximum": 100},
"critical_issues_count": {"type": "integer"},
"medium_issues_count": {"type": "integer"},
"estimated_effort": {"type": "string"},
"risk_assessment": {"type": "string", "enum": ["low", "medium", "high", "critical"]},
"key_insights": {"type": "array", "items": {"type": "string"}}
}
},
"critical_findings": {
"type": "array",
"items": {
"type": "object",
"required": ["finding_id", "title", "impact", "urgency", "recommended_action"],
"properties": {
"finding_id": {"type": "string"},
"title": {"type": "string"},
"description": {"type": "string"},
"impact": {"type": "string", "enum": ["severe", "high", "medium", "low"]},
"urgency": {"type": "string", "enum": ["immediate", "within_week", "within_month", "can_wait"]},
"recommended_action": {"type": "string"},
"affected_stakeholders": {"type": "array", "items": {"type": "string"}},
"business_justification": {"type": "string"}
}
}
},
"action_plan": {
"type": "object",
"required": ["immediate_actions", "short_term_actions", "long_term_actions"],
"properties": {
"immediate_actions": {
"type": "array",
"items": {
"type": "object",
"required": ["action", "owner", "deadline"],
"properties": {
"action": {"type": "string"},
"owner": {"type": "string"},
"deadline": {"type": "string"},
"dependencies": {"type": "array", "items": {"type": "string"}},
"success_criteria": {"type": "string"}
}
}
},
"short_term_actions": {
"type": "array",
"items": {
"type": "object",
"required": ["action", "owner", "timeline"],
"properties": {
"action": {"type": "string"},
"owner": {"type": "string"},
"timeline": {"type": "string"},
"resources_required": {"type": "array", "items": {"type": "string"}},
"milestones": {"type": "array", "items": {"type": "string"}}
}
}
},
"long_term_actions": {
"type": "array",
"items": {
"type": "object",
"required": ["action", "strategic_goal", "investment_required"],
"properties": {
"action": {"type": "string"},
"strategic_goal": {"type": "string"},
"investment_required": {"type": "string"},
"expected_roi": {"type": "string"},
"risk_mitigation": {"type": "string"}
}
}
}
}
},
"implementation_roadmap": {
"type": "object",
"required": ["phases", "milestones", "dependencies", "resource_allocation"],
"properties": {
"phases": {
"type": "array",
"items": {
"type": "object",
"required": ["phase_name", "duration", "deliverables", "success_criteria"],
"properties": {
"phase_name": {"type": "string"},
"duration": {"type": "string"},
"deliverables": {"type": "array", "items": {"type": "string"}},
"success_criteria": {"type": "array", "items": {"type": "string"}},
"risks": {"type": "array", "items": {"type": "string"}},
"dependencies": {"type": "array", "items": {"type": "string"}}
}
}
},
"milestones": {"type": "array", "items": {"type": "string"}},
"dependencies": {"type": "object"},
"resource_allocation": {
"type": "object",
"required": ["technical_writing", "development", "review", "testing"],
"properties": {
"technical_writing": {"type": "string"},
"development": {"type": "string"},
"review": {"type": "string"},
"testing": {"type": "string"},
"project_management": {"type": "string"}
}
}
}
},
"success_metrics": {
"type": "object",
"required": ["documentation_coverage", "freshness_targets", "quality_metrics", "user_satisfaction"],
"properties": {
"documentation_coverage": {
"type": "object",
"required": ["api_coverage_target", "feature_coverage_target", "example_coverage_target"],
"properties": {
"api_coverage_target": {"type": "integer", "minimum": 0, "maximum": 100},
"feature_coverage_target": {"type": "integer", "minimum": 0, "maximum": 100},
"example_coverage_target": {"type": "integer", "minimum": 0, "maximum": 100}
}
},
"freshness_targets": {
"type": "object",
"required": ["max_staleness_days", "update_frequency_target"],
"properties": {
"max_staleness_days": {"type": "integer"},
"update_frequency_target": {"type": "string"},
"automated_freshness_checks": {"type": "boolean"}
}
},
"quality_metrics": {
"type": "object",
"required": ["accuracy_target", "completeness_target", "usability_score_target"],
"properties": {
"accuracy_target": {"type": "integer", "minimum": 0, "maximum": 100},
"completeness_target": {"type": "integer", "minimum": 0, "maximum": 100},
"usability_score_target": {"type": "integer", "minimum": 0, "maximum": 100}
}
},
"user_satisfaction": {
"type": "object",
"required": ["feedback_score_target", "support_ticket_reduction_target"],
"properties": {
"feedback_score_target": {"type": "number", "minimum": 1, "maximum": 5},
"support_ticket_reduction_target": {"type": "integer", "minimum": 0, "maximum": 100},
"documentation_usage_increase": {"type": "integer"}
}
}
}
},
"recommendations": {
"type": "object",
"required": ["process_improvements", "tooling_recommendations", "organizational_changes", "prevention_strategies"],
"properties": {
"process_improvements": {"type": "array", "items": {"type": "string"}},
"tooling_recommendations": {
"type": "array",
"items": {
"type": "object",
"required": ["tool_name", "purpose", "implementation_effort"],
"properties": {
"tool_name": {"type": "string"},
"purpose": {"type": "string"},
"implementation_effort": {"type": "string"},
"ongoing_cost": {"type": "string"},
"benefits": {"type": "array", "items": {"type": "string"}}
}
}
},
"organizational_changes": {"type": "array", "items": {"type": "string"}},
"prevention_strategies": {
"type": "array",
"items": {
"type": "object",
"required": ["strategy", "implementation_approach"],
"properties": {
"strategy": {"type": "string"},
"implementation_approach": {"type": "string"},
"expected_impact": {"type": "string"},
"maintenance_requirement": {"type": "string"}
}
}
}
}
}
}
}