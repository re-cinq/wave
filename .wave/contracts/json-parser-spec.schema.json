{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "overview",
    "user_stories",
    "api_design",
    "validation_model",
    "error_handling",
    "edge_cases",
    "testing_strategy"
  ],
  "properties": {
    "overview": {
      "type": "object",
      "properties": {
        "purpose": {
          "type": "string"
        },
        "scope": {
          "type": "string"
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "user_stories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "story": {
            "type": "string"
          },
          "acceptance_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "api_design": {
      "type": "object",
      "properties": {
        "functions": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "input_formats": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "output_formats": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "validation_model": {
      "type": "object",
      "properties": {
        "validation_rules": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "result_structure": {
          "type": "object"
        }
      }
    },
    "error_handling": {
      "type": "object",
      "properties": {
        "error_types": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "error_responses": {
          "type": "object"
        }
      }
    },
    "edge_cases": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "testing_strategy": {
      "type": "object",
      "properties": {
        "unit_tests": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "integration_tests": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "test_data": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}