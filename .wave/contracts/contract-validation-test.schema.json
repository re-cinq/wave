{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contract Validation Test Schema",
  "description": "Schema for testing contract validation failure - expects specific fields that the pipeline intentionally does NOT provide",
  "type": "object",
  "required": [
    "status",
    "message",
    "error_code"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "failure"],
      "description": "Status of the operation"
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "description": "Descriptive message"
    },
    "error_code": {
      "type": "integer",
      "minimum": 0,
      "description": "Error code if applicable"
    }
  },
  "additionalProperties": false
}
