{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "pre_merge_validations",
    "automated_testing",
    "quality_gates",
    "monitoring_strategies",
    "feedback_loops"
  ],
  "properties": {
    "pre_merge_validations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "validation_name",
          "validation_type",
          "automation_level"
        ],
        "properties": {
          "validation_name": {
            "type": "string"
          },
          "validation_type": {
            "type": "string",
            "enum": [
              "link_check",
              "spell_check",
              "format_validation",
              "content_review",
              "api_sync_check",
              "example_verification"
            ]
          },
          "automation_level": {
            "type": "string",
            "enum": [
              "fully_automated",
              "semi_automated",
              "manual"
            ]
          },
          "blocking": {
            "type": "boolean"
          },
          "execution_time": {
            "type": "string"
          },
          "false_positive_rate": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          }
        }
      }
    },
    "automated_testing": {
      "type": "object",
      "required": [
        "test_types",
        "test_frequency",
        "coverage_targets"
      ],
      "properties": {
        "test_types": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "test_name",
              "test_scope",
              "tools_used"
            ],
            "properties": {
              "test_name": {
                "type": "string"
              },
              "test_scope": {
                "type": "string"
              },
              "tools_used": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "run_frequency": {
                "type": "string",
                "enum": [
                  "on_commit",
                  "daily",
                  "weekly",
                  "on_release"
                ]
              },
              "failure_action": {
                "type": "string"
              }
            }
          }
        },
        "test_frequency": {
          "type": "object"
        },
        "coverage_targets": {
          "type": "object",
          "required": [
            "api_coverage",
            "example_coverage",
            "link_coverage"
          ],
          "properties": {
            "api_coverage": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100
            },
            "example_coverage": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100
            },
            "link_coverage": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100
            }
          }
        }
      }
    },
    "quality_gates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "gate_name",
          "criteria",
          "enforcement_level"
        ],
        "properties": {
          "gate_name": {
            "type": "string"
          },
          "criteria": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "enforcement_level": {
            "type": "string",
            "enum": [
              "blocking",
              "warning",
              "informational"
            ]
          },
          "bypass_conditions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "escalation_path": {
            "type": "string"
          }
        }
      }
    },
    "monitoring_strategies": {
      "type": "object",
      "required": [
        "metrics_to_track",
        "alerting_thresholds",
        "reporting_frequency"
      ],
      "properties": {
        "metrics_to_track": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "metric_name",
              "metric_type",
              "collection_method"
            ],
            "properties": {
              "metric_name": {
                "type": "string"
              },
              "metric_type": {
                "type": "string",
                "enum": [
                  "coverage",
                  "freshness",
                  "quality",
                  "usage",
                  "feedback"
                ]
              },
              "collection_method": {
                "type": "string"
              },
              "baseline_value": {
                "type": "number"
              },
              "target_value": {
                "type": "number"
              }
            }
          }
        },
        "alerting_thresholds": {
          "type": "object"
        },
        "reporting_frequency": {
          "type": "string",
          "enum": [
            "real_time",
            "daily",
            "weekly",
            "monthly"
          ]
        },
        "dashboard_requirements": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "feedback_loops": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "feedback_source",
          "collection_method",
          "response_process"
        ],
        "properties": {
          "feedback_source": {
            "type": "string",
            "enum": [
              "users",
              "developers",
              "support_team",
              "analytics",
              "automated_systems"
            ]
          },
          "collection_method": {
            "type": "string"
          },
          "response_process": {
            "type": "string"
          },
          "frequency": {
            "type": "string"
          },
          "action_triggers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}