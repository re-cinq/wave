{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHub Change Analysis",
  "description": "Schema for analyzing git changes before PR creation",
  "type": "object",
  "required": ["current_branch", "base_branch", "changed_files"],
  "properties": {
    "current_branch": {
      "type": "string",
      "minLength": 1
    },
    "base_branch": {
      "type": "string",
      "minLength": 1
    },
    "changed_files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "change_type"],
        "properties": {
          "path": {
            "type": "string"
          },
          "change_type": {
            "type": "string",
            "enum": ["added", "modified", "deleted", "renamed"]
          },
          "additions": {
            "type": "integer",
            "minimum": 0
          },
          "deletions": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "commit_messages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "diff_summary": {
      "type": "string",
      "description": "High-level summary of changes"
    },
    "related_issues": {
      "type": "array",
      "items": {
        "type": "integer"
      },
      "description": "Issue numbers referenced in commits"
    },
    "total_additions": {
      "type": "integer",
      "minimum": 0
    },
    "total_deletions": {
      "type": "integer",
      "minimum": 0
    }
  }
}
