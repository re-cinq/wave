{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Authentication-related files discovered in the codebase",
  "required": [
    "files",
    "entry_points",
    "summary"
  ],
  "properties": {
    "files": {
      "type": "array",
      "description": "List of files related to authentication",
      "items": {
        "type": "object",
        "required": [
          "path",
          "purpose",
          "category"
        ],
        "properties": {
          "path": {
            "type": "string",
            "description": "File path relative to project root"
          },
          "purpose": {
            "type": "string",
            "description": "What this file does for authentication"
          },
          "category": {
            "type": "string",
            "enum": [
              "handler",
              "middleware",
              "model",
              "service",
              "utility",
              "config",
              "test"
            ],
            "description": "Category of authentication component"
          }
        }
      }
    },
    "entry_points": {
      "type": "array",
      "description": "Primary entry points for authentication (routes, commands, etc.)",
      "items": {
        "type": "object",
        "required": [
          "path",
          "type",
          "description"
        ],
        "properties": {
          "path": {
            "type": "string",
            "description": "File path containing the entry point"
          },
          "type": {
            "type": "string",
            "enum": [
              "http_route",
              "cli_command",
              "api_endpoint",
              "middleware"
            ],
            "description": "Type of entry point"
          },
          "description": {
            "type": "string",
            "description": "What this entry point handles"
          }
        }
      }
    },
    "summary": {
      "type": "string",
      "description": "Brief summary of the authentication file landscape"
    }
  }
}