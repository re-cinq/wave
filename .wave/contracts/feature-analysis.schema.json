{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feature Analysis Output",
  "description": "Structured analysis output for feature requirements",
  "type": "object",
  "required": [
    "feature_title",
    "feature_description",
    "requirements",
    "acceptance_criteria",
    "affected_files",
    "estimated_effort",
    "implementation_approach"
  ],
  "properties": {
    "feature_title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "Clear, specific feature title"
    },
    "feature_description": {
      "type": "string",
      "minLength": 100,
      "description": "Detailed feature description"
    },
    "requirements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 10
      },
      "description": "Specific functional requirements"
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 10
      },
      "description": "Testable acceptance criteria"
    },
    "affected_files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Files that will be modified or created"
    },
    "estimated_effort": {
      "type": "string",
      "enum": ["small", "medium", "large", "extra-large"],
      "description": "Estimated implementation effort"
    },
    "implementation_approach": {
      "type": "string",
      "minLength": 50,
      "description": "High-level implementation approach"
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Identified implementation risks"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "External dependencies required"
    }
  }
}
