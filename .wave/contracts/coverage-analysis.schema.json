      "items": { "type": "string" }
    },
    "uncovered_branches": {
      "type": "array",
      "items": { "type": "string" }
    },
    "edge_cases": {
      "type": "array",
      "items": { "type": "string" }
    },
    "mock_requirements": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
