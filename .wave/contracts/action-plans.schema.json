{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Prioritized action plans based on analytics comparison",
  "required": [
    "executive_summary",
    "quick_wins",
    "content_actions",
    "traffic_actions",
    "optimization_actions",
    "strategic_initiatives",
    "implementation_timeline",
    "kpis"
  ],
  "properties": {
    "executive_summary": {
      "type": "string",
      "description": "Brief overview of the action plan strategy"
    },
    "quick_wins": {
      "type": "array",
      "description": "Immediate high-impact actions",
      "items": {
        "type": "object",
        "required": [
          "title",
          "objective",
          "tasks",
          "priority",
          "expected_impact"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "Action item title"
          },
          "objective": {
            "type": "string",
            "description": "Clear goal of this action"
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Specific tasks to complete"
          },
          "priority": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ],
            "description": "Priority level"
          },
          "expected_impact": {
            "type": "string",
            "description": "Expected outcome or impact"
          },
          "success_metrics": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "How to measure success"
          }
        }
      }
    },
    "content_actions": {
      "type": "array",
      "description": "Content improvement actions",
      "items": {
        "type": "object",
        "required": [
          "title",
          "objective",
          "tasks",
          "priority",
          "expected_impact"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "objective": {
            "type": "string"
          },
          "target_pages": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Specific pages to improve"
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "priority": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          },
          "expected_impact": {
            "type": "string"
          },
          "success_metrics": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "traffic_actions": {
      "type": "array",
      "description": "Traffic acquisition and retention actions",
      "items": {
        "type": "object",
        "required": [
          "title",
          "objective",
          "tasks",
          "priority",
          "expected_impact"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "objective": {
            "type": "string"
          },
          "target_sources": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Traffic sources to focus on"
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "priority": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          },
          "expected_impact": {
            "type": "string"
          },
          "success_metrics": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "optimization_actions": {
      "type": "array",
      "description": "Conversion and engagement optimization actions",
      "items": {
        "type": "object",
        "required": [
          "title",
          "objective",
          "tasks",
          "priority",
          "expected_impact"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "objective": {
            "type": "string"
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "priority": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          },
          "expected_impact": {
            "type": "string"
          },
          "success_metrics": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "strategic_initiatives": {
      "type": "array",
      "description": "Long-term strategic initiatives",
      "items": {
        "type": "object",
        "required": [
          "title",
          "objective",
          "tasks",
          "priority",
          "expected_impact"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "objective": {
            "type": "string"
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "priority": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          },
          "expected_impact": {
            "type": "string"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Prerequisites or dependencies"
          },
          "success_metrics": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "implementation_timeline": {
      "type": "object",
      "description": "Suggested phasing of implementation",
      "properties": {
        "phase_1": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "actions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "focus": {
              "type": "string"
            }
          }
        },
        "phase_2": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "actions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "focus": {
              "type": "string"
            }
          }
        },
        "phase_3": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "actions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "focus": {
              "type": "string"
            }
          }
        }
      }
    },
    "kpis": {
      "type": "array",
      "description": "Key performance indicators to track",
      "items": {
        "type": "object",
        "required": [
          "name",
          "current_value",
          "target_value"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "KPI name"
          },
          "current_value": {
            "type": "string",
            "description": "Current baseline value"
          },
          "target_value": {
            "type": "string",
            "description": "Target value to achieve"
          },
          "measurement_method": {
            "type": "string",
            "description": "How to measure this KPI"
          }
        }
      }
    }
  }
}