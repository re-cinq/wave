{
"$schema": "http://json-schema.org/draft-07/schema#",
"type": "object",
"required": ["steps", "files", "dependencies"],
"properties": {
"steps": {
"type": "array",
"items": {
"type": "object",
"properties": {
"id": {"type": "string"},
"description": {"type": "string"},
"action": {"type": "string", "enum": ["create", "modify", "test"]},
"file": {"type": "string"},
"depends_on": {"type": "array", "items": {"type": "string"}}
}
}
},
"files": {
"type": "object",
"properties": {
"implementation": {"type": "string"},
"tests": {"type": "string"},
"exports": {"type": "string"}
}
},
"dependencies": {
"type": "array",
"items": {"type": "string"}
},
"validation": {
"type": "object",
"properties": {
"build_command": {"type": "string"},
"test_command": {"type": "string"},
"success_criteria": {"type": "array", "items": {"type": "string"}}
}
}
}
}