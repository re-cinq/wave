{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "current_state",
    "inconsistencies",
    "gaps",
    "priority_areas"
  ],
  "properties": {
    "current_state": {
      "type": "object",
      "properties": {
        "readme_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "docs_directory": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "help_commands": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "inline_docs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "inconsistencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string"
          },
          "issue": {
            "type": "string"
          },
          "severity": {
            "type": "string"
          }
        }
      }
    },
    "gaps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "area": {
            "type": "string"
          },
          "missing_content": {
            "type": "string"
          },
          "impact": {
            "type": "string"
          }
        }
      }
    },
    "priority_areas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "area": {
            "type": "string"
          },
          "priority": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          }
        }
      }
    }
  }
}