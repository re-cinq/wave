{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wave.dev/contracts/spec-phase.schema.json",
  "title": "Specification Phase Output",
  "description": "Schema for the specification phase output artifact",
  "type": "object",
  "required": ["title", "description", "user_stories", "entities"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 5,
      "description": "Feature title"
    },
    "description": {
      "type": "string",
      "minLength": 50,
      "description": "Feature overview explaining the 'why'"
    },
    "user_stories": {
      "type": "array",
      "minItems": 1,
      "description": "User stories with acceptance criteria",
      "items": {
        "type": "object",
        "required": ["id", "as_a", "i_want", "so_that", "acceptance_criteria"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^US-[0-9]+$",
            "description": "Unique user story ID (e.g., US-001)"
          },
          "as_a": {
            "type": "string",
            "description": "User role or persona"
          },
          "i_want": {
            "type": "string",
            "description": "Desired action or capability"
          },
          "so_that": {
            "type": "string",
            "description": "Business value or outcome"
          },
          "acceptance_criteria": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            },
            "description": "Testable conditions for completion"
          },
          "priority": {
            "type": "string",
            "enum": ["P1", "P2", "P3", "P4"],
            "description": "Priority level (P1 = critical, P4 = nice-to-have)"
          }
        }
      }
    },
    "entities": {
      "type": "array",
      "description": "Data model entities",
      "items": {
        "type": "object",
        "required": ["name", "fields"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Entity name (PascalCase)"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "required": {
                  "type": "boolean",
                  "default": false
                },
                "default": {},
                "constraints": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "relationships": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Related entity names"
          },
          "validation_rules": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Business validation rules"
          }
        }
      }
    },
    "interfaces": {
      "type": "array",
      "description": "API, CLI, UI, or library interfaces",
      "items": {
        "type": "object",
        "required": ["type", "name"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["cli", "api", "ui", "library"],
            "description": "Interface type"
          },
          "name": {
            "type": "string",
            "description": "Interface name"
          },
          "description": {
            "type": "string"
          },
          "operations": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "inputs": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                },
                "outputs": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                },
                "errors": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "edge_cases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Known edge cases to handle"
    },
    "success_metrics": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Measurable success criteria"
    }
  }
}
