{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.recinq.com/wave/progress-events.schema.json",
  "title": "Wave Enhanced Progress Events",
  "description": "Schema for enhanced progress events in Wave pipeline execution",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of event occurrence"
    },
    "pipeline_id": {
      "type": "string",
      "description": "Unique identifier for the pipeline execution",
      "minLength": 1
    },
    "step_id": {
      "type": "string",
      "description": "Unique identifier for the step within pipeline",
      "minLength": 1
    },
    "state": {
      "type": "string",
      "enum": [
        "started",
        "running",
        "completed",
        "failed",
        "retrying",
        "step_progress",
        "eta_updated",
        "contract_validating",
        "compaction_progress"
      ],
      "description": "Current state or progress event type"
    },
    "duration_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Duration in milliseconds since step start"
    },
    "message": {
      "type": "string",
      "description": "Human-readable status message"
    },
    "persona": {
      "type": "string",
      "description": "Name of the persona executing this step"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of artifacts generated by this step"
    },
    "tokens_used": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of LLM tokens consumed"
    },
    "progress": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "Progress percentage for current step (0-100)"
    },
    "estimated_time_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Estimated time remaining for completion in milliseconds"
    },
    "current_action": {
      "type": "string",
      "description": "Current action being performed"
    },
    "total_steps": {
      "type": "integer",
      "minimum": 1,
      "description": "Total number of steps in pipeline"
    },
    "completed_steps": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of completed steps"
    },
    "validation_phase": {
      "type": "string",
      "enum": [
        "pending",
        "validating",
        "schema_check",
        "compilation_check",
        "test_execution",
        "passed",
        "failed"
      ],
      "description": "Contract validation progress stage"
    },
    "compaction_stats": {
      "type": ["string", "null"],
      "description": "Compaction statistics as JSON string"
    }
  },
  "required": [
    "timestamp",
    "pipeline_id",
    "state"
  ],
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "state": {
            "const": "step_progress"
          }
        }
      },
      "then": {
        "required": ["step_id", "progress"]
      }
    },
    {
      "if": {
        "properties": {
          "state": {
            "const": "eta_updated"
          }
        }
      },
      "then": {
        "required": ["estimated_time_ms"]
      }
    },
    {
      "if": {
        "properties": {
          "state": {
            "const": "contract_validating"
          }
        }
      },
      "then": {
        "required": ["step_id", "validation_phase"]
      }
    }
  ]
}