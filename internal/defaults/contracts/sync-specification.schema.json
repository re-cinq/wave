{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Comprehensive synchronization strategy specification",
  "required": [
    "update_procedures",
    "documentation_standards",
    "automation_strategy",
    "maintenance_workflow"
  ],
  "properties": {
    "update_procedures": {
      "type": "array",
      "description": "Detailed procedures for updating documentation",
      "items": {
        "type": "object",
        "required": [
          "procedure_name",
          "target_files",
          "update_steps",
          "validation_criteria"
        ],
        "properties": {
          "procedure_name": {
            "type": "string",
            "description": "Name of the update procedure"
          },
          "target_files": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Files targeted by this procedure"
          },
          "update_steps": {
            "type": "array",
            "description": "Step-by-step update instructions",
            "items": {
              "type": "object",
              "required": [
                "step_number",
                "action",
                "details"
              ],
              "properties": {
                "step_number": {
                  "type": "integer",
                  "description": "Order of execution"
                },
                "action": {
                  "type": "string",
                  "description": "Action to perform"
                },
                "details": {
                  "type": "string",
                  "description": "Detailed instructions for the action"
                }
              }
            }
          },
          "validation_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Criteria to validate successful completion"
          }
        }
      }
    },
    "documentation_standards": {
      "type": "object",
      "description": "Standards and guidelines for documentation",
      "required": [
        "format_requirements",
        "content_guidelines",
        "review_process"
      ],
      "properties": {
        "format_requirements": {
          "type": "object",
          "description": "Formatting requirements for documentation",
          "required": [
            "markdown_style",
            "code_examples",
            "link_format"
          ],
          "properties": {
            "markdown_style": {
              "type": "string",
              "description": "Markdown formatting standards"
            },
            "code_examples": {
              "type": "string",
              "description": "Standards for code examples"
            },
            "link_format": {
              "type": "string",
              "description": "Format for internal and external links"
            }
          }
        },
        "content_guidelines": {
          "type": "array",
          "description": "Content quality guidelines",
          "items": {
            "type": "string"
          }
        },
        "review_process": {
          "type": "string",
          "description": "Process for reviewing documentation changes"
        }
      }
    },
    "automation_strategy": {
      "type": "object",
      "description": "Strategy for automating documentation maintenance",
      "required": [
        "automated_checks",
        "generation_tools",
        "sync_triggers"
      ],
      "properties": {
        "automated_checks": {
          "type": "array",
          "description": "Automated checks to implement",
          "items": {
            "type": "object",
            "required": [
              "check_name",
              "frequency",
              "scope",
              "action_on_failure"
            ],
            "properties": {
              "check_name": {
                "type": "string",
                "description": "Name of the automated check"
              },
              "frequency": {
                "type": "string",
                "enum": [
                  "on_commit",
                  "daily",
                  "weekly",
                  "on_release"
                ],
                "description": "How often to run the check"
              },
              "scope": {
                "type": "string",
                "description": "What the check validates"
              },
              "action_on_failure": {
                "type": "string",
                "description": "Action to take when check fails"
              }
            }
          }
        },
        "generation_tools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tools for automatic documentation generation"
        },
        "sync_triggers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Events that should trigger documentation updates"
        }
      }
    },
    "maintenance_workflow": {
      "type": "object",
      "description": "Ongoing maintenance workflow for documentation",
      "required": [
        "review_schedule",
        "update_responsibilities",
        "quality_metrics"
      ],
      "properties": {
        "review_schedule": {
          "type": "string",
          "description": "Schedule for regular documentation reviews"
        },
        "update_responsibilities": {
          "type": "object",
          "description": "Responsibilities for different types of updates",
          "required": [
            "code_changes",
            "new_features",
            "api_changes"
          ],
          "properties": {
            "code_changes": {
              "type": "string",
              "description": "Who is responsible for updating docs when code changes"
            },
            "new_features": {
              "type": "string",
              "description": "Who documents new features"
            },
            "api_changes": {
              "type": "string",
              "description": "Who handles API documentation updates"
            }
          }
        },
        "quality_metrics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Metrics to track documentation quality"
        }
      }
    }
  }
}