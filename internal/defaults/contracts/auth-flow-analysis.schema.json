{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Detailed analysis of authentication flow",
  "required": [
    "flow_stages",
    "data_flow",
    "security_mechanisms",
    "dependencies"
  ],
  "properties": {
    "flow_stages": {
      "type": "array",
      "description": "Ordered stages of the authentication flow",
      "items": {
        "type": "object",
        "required": [
          "stage",
          "description",
          "files_involved",
          "inputs",
          "outputs"
        ],
        "properties": {
          "stage": {
            "type": "string",
            "description": "Name of this authentication stage"
          },
          "description": {
            "type": "string",
            "description": "What happens during this stage"
          },
          "files_involved": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Files that participate in this stage"
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Data inputs to this stage"
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Data outputs from this stage"
          }
        }
      }
    },
    "data_flow": {
      "type": "object",
      "description": "How authentication data moves through the system",
      "required": [
        "credentials_handling",
        "token_lifecycle",
        "session_management"
      ],
      "properties": {
        "credentials_handling": {
          "type": "string",
          "description": "How credentials are received, validated, and processed"
        },
        "token_lifecycle": {
          "type": "string",
          "description": "How tokens are created, validated, refreshed, and revoked"
        },
        "session_management": {
          "type": "string",
          "description": "How sessions are created, maintained, and terminated"
        }
      }
    },
    "security_mechanisms": {
      "type": "array",
      "description": "Security controls in the authentication flow",
      "items": {
        "type": "object",
        "required": [
          "mechanism",
          "location",
          "purpose"
        ],
        "properties": {
          "mechanism": {
            "type": "string",
            "description": "Name of the security mechanism"
          },
          "location": {
            "type": "string",
            "description": "Where in the flow this mechanism operates"
          },
          "purpose": {
            "type": "string",
            "description": "What security goal this mechanism achieves"
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "External dependencies for authentication",
      "required": [
        "libraries",
        "services"
      ],
      "properties": {
        "libraries": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "purpose"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "purpose": {
                "type": "string"
              }
            }
          },
          "description": "External libraries used for authentication"
        },
        "services": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "purpose"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "purpose": {
                "type": "string"
              }
            }
          },
          "description": "External services the auth system depends on"
        }
      }
    }
  }
}