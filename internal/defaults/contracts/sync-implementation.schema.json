{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Concrete implementation tasks for documentation synchronization",
  "required": [
    "file_updates",
    "automation_setup",
    "validation_tasks",
    "dependencies"
  ],
  "properties": {
    "file_updates": {
      "type": "array",
      "description": "Specific file update tasks",
      "items": {
        "type": "object",
        "required": [
          "task_id",
          "file_path",
          "update_type",
          "content_requirements",
          "priority"
        ],
        "properties": {
          "task_id": {
            "type": "string",
            "description": "Unique identifier for the task"
          },
          "file_path": {
            "type": "string",
            "description": "Path to file that needs updating"
          },
          "update_type": {
            "type": "string",
            "enum": [
              "CREATE",
              "UPDATE",
              "DELETE",
              "RESTRUCTURE"
            ],
            "description": "Type of update required"
          },
          "content_requirements": {
            "type": "object",
            "description": "Specific content requirements for the update",
            "required": [
              "sections_to_add",
              "sections_to_update",
              "sections_to_remove"
            ],
            "properties": {
              "sections_to_add": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "New sections to add"
              },
              "sections_to_update": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Existing sections to update"
              },
              "sections_to_remove": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Sections to remove"
              },
              "specific_content": {
                "type": "string",
                "description": "Specific content requirements or templates"
              }
            }
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "description": "Task priority (1=highest)"
          }
        }
      }
    },
    "automation_setup": {
      "type": "array",
      "description": "Tasks for setting up automation",
      "items": {
        "type": "object",
        "required": [
          "automation_name",
          "setup_steps",
          "configuration_files",
          "testing_procedure"
        ],
        "properties": {
          "automation_name": {
            "type": "string",
            "description": "Name of the automation to set up"
          },
          "setup_steps": {
            "type": "array",
            "description": "Steps to set up the automation",
            "items": {
              "type": "object",
              "required": [
                "step",
                "command",
                "expected_result"
              ],
              "properties": {
                "step": {
                  "type": "string",
                  "description": "Description of the step"
                },
                "command": {
                  "type": "string",
                  "description": "Command or action to execute"
                },
                "expected_result": {
                  "type": "string",
                  "description": "Expected outcome"
                }
              }
            }
          },
          "configuration_files": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Configuration files to create or modify"
          },
          "testing_procedure": {
            "type": "string",
            "description": "How to test that automation works correctly"
          }
        }
      }
    },
    "validation_tasks": {
      "type": "array",
      "description": "Tasks to validate documentation updates",
      "items": {
        "type": "object",
        "required": [
          "validation_name",
          "check_criteria",
          "tools_required",
          "success_criteria"
        ],
        "properties": {
          "validation_name": {
            "type": "string",
            "description": "Name of the validation task"
          },
          "check_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "What to check during validation"
          },
          "tools_required": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tools needed for validation"
          },
          "success_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Criteria for successful validation"
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Task dependencies and execution order",
      "required": [
        "task_order",
        "prerequisites",
        "parallel_tasks"
      ],
      "properties": {
        "task_order": {
          "type": "array",
          "description": "Recommended order for executing tasks",
          "items": {
            "type": "object",
            "required": [
              "phase",
              "tasks"
            ],
            "properties": {
              "phase": {
                "type": "string",
                "description": "Execution phase name"
              },
              "tasks": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Tasks to execute in this phase"
              }
            }
          }
        },
        "prerequisites": {
          "type": "array",
          "description": "Prerequisites that must be met before starting",
          "items": {
            "type": "string"
          }
        },
        "parallel_tasks": {
          "type": "array",
          "description": "Tasks that can be executed in parallel",
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}