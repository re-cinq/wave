{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Detailed specification for a doc/impl mismatch issue",
  "required": [
    "issue_id",
    "overview",
    "current_state",
    "desired_state",
    "acceptance_criteria",
    "files_to_modify"
  ],
  "properties": {
    "issue_id": {
      "type": "string",
      "description": "Original mismatch ID being addressed"
    },
    "ranking": {
      "type": "integer",
      "description": "Priority ranking (1, 2, or 3)"
    },
    "overview": {
      "type": "object",
      "required": [
        "title",
        "summary",
        "rationale"
      ],
      "properties": {
        "title": {
          "type": "string",
          "description": "Brief descriptive title"
        },
        "summary": {
          "type": "string",
          "description": "One paragraph summary of the issue"
        },
        "rationale": {
          "type": "string",
          "description": "Why this needs to be fixed"
        }
      }
    },
    "current_state": {
      "type": "object",
      "required": [
        "description"
      ],
      "properties": {
        "description": {
          "type": "string",
          "description": "Description of current state"
        },
        "doc_quote": {
          "type": "string",
          "description": "Relevant quote from documentation"
        },
        "impl_quote": {
          "type": "string",
          "description": "Relevant code or behavior description"
        }
      }
    },
    "desired_state": {
      "type": "object",
      "required": [
        "description"
      ],
      "properties": {
        "description": {
          "type": "string",
          "description": "Description of desired end state"
        },
        "behavior_spec": {
          "type": "string",
          "description": "Specific behavior specification"
        }
      }
    },
    "user_stories": {
      "type": "array",
      "description": "User stories for this fix",
      "items": {
        "type": "object",
        "required": [
          "as_a",
          "i_want",
          "so_that"
        ],
        "properties": {
          "as_a": {
            "type": "string"
          },
          "i_want": {
            "type": "string"
          },
          "so_that": {
            "type": "string"
          }
        }
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "description": "Specific testable acceptance criteria",
      "items": {
        "type": "object",
        "required": [
          "id",
          "criterion"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "criterion": {
            "type": "string"
          },
          "verification_method": {
            "type": "string"
          }
        }
      }
    },
    "technical_approach": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string",
          "enum": [
            "fix_docs",
            "fix_impl",
            "fix_both"
          ],
          "description": "Overall approach"
        },
        "description": {
          "type": "string",
          "description": "Technical approach description"
        },
        "considerations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Technical considerations"
        }
      }
    },
    "files_to_modify": {
      "type": "array",
      "description": "Files that need to be changed",
      "items": {
        "type": "object",
        "required": [
          "path",
          "change_type"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "change_type": {
            "type": "string",
            "enum": [
              "modify",
              "create",
              "delete"
            ]
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "testing_strategy": {
      "type": "object",
      "properties": {
        "unit_tests": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "integration_tests": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "manual_verification": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "rollback_plan": {
      "type": "string",
      "description": "How to undo the changes if needed"
    }
  }
}