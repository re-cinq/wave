{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "open_issues",
    "pr_context",
    "user_feedback",
    "documentation_requests"
  ],
  "properties": {
    "open_issues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "issue_number": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "documentation_relation": {
            "type": "string"
          },
          "priority": {
            "type": "string"
          }
        }
      }
    },
    "pr_context": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pr_number": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "documentation_changes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string"
          }
        }
      }
    },
    "user_feedback": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string"
          },
          "feedback": {
            "type": "string"
          },
          "area": {
            "type": "string"
          }
        }
      }
    },
    "documentation_requests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "request": {
            "type": "string"
          },
          "requester": {
            "type": "string"
          },
          "urgency": {
            "type": "string"
          }
        }
      }
    }
  }
}