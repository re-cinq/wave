{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Analysis of documented features and behaviors",
  "required": [
    "documented_features",
    "cli_commands",
    "config_options"
  ],
  "properties": {
    "documented_features": {
      "type": "array",
      "description": "List of features documented in the project",
      "items": {
        "type": "object",
        "required": [
          "name",
          "description",
          "location"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Feature name or identifier"
          },
          "description": {
            "type": "string",
            "description": "Description of the feature"
          },
          "location": {
            "type": "string",
            "description": "File and line reference (e.g., docs/guide.md:45)"
          }
        }
      }
    },
    "cli_commands": {
      "type": "array",
      "description": "Documented CLI commands",
      "items": {
        "type": "object",
        "required": [
          "name",
          "documented_behavior"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Command name"
          },
          "options": {
            "type": "array",
            "description": "Command options/flags",
            "items": {
              "type": "object",
              "required": [
                "flag",
                "description"
              ],
              "properties": {
                "flag": {
                  "type": "string",
                  "description": "Option flag (e.g., --verbose)"
                },
                "description": {
                  "type": "string",
                  "description": "Option description"
                }
              }
            }
          },
          "documented_behavior": {
            "type": "string",
            "description": "Documented behavior of the command"
          }
        }
      }
    },
    "config_options": {
      "type": "array",
      "description": "Documented configuration options",
      "items": {
        "type": "object",
        "required": [
          "path",
          "expected_type"
        ],
        "properties": {
          "path": {
            "type": "string",
            "description": "Config path (e.g., pipeline.steps[].memory.strategy)"
          },
          "expected_type": {
            "type": "string",
            "description": "Expected value type"
          },
          "description": {
            "type": "string",
            "description": "Description of the config option"
          }
        }
      }
    },
    "persona_capabilities": {
      "type": "array",
      "description": "Documented persona capabilities",
      "items": {
        "type": "object",
        "required": [
          "persona",
          "capabilities"
        ],
        "properties": {
          "persona": {
            "type": "string",
            "description": "Persona name"
          },
          "capabilities": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of documented capabilities"
          }
        }
      }
    },
    "contract_types": {
      "type": "array",
      "description": "Documented contract/validation types",
      "items": {
        "type": "object",
        "required": [
          "type",
          "description"
        ],
        "properties": {
          "type": {
            "type": "string",
            "description": "Contract type name"
          },
          "description": {
            "type": "string",
            "description": "Description of the contract type"
          }
        }
      }
    }
  }
}