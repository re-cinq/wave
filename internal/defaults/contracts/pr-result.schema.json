{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Result of PR creation with alignment proposal",
  "required": [
    "pr_url",
    "pr_number",
    "branch_name",
    "proposal_path"
  ],
  "properties": {
    "pr_url": {
      "type": "string",
      "format": "uri",
      "description": "URL of the created pull request"
    },
    "pr_number": {
      "type": "integer",
      "description": "Pull request number"
    },
    "branch_name": {
      "type": "string",
      "description": "Name of the feature branch"
    },
    "proposal_path": {
      "type": "string",
      "description": "Path to the proposal document"
    },
    "issues_summary": {
      "type": "array",
      "description": "Brief summary of the 3 issues in the proposal",
      "items": {
        "type": "object",
        "required": [
          "ranking",
          "title"
        ],
        "properties": {
          "ranking": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "approach": {
            "type": "string"
          }
        }
      }
    },
    "commit_sha": {
      "type": "string",
      "description": "SHA of the commit with the proposal"
    }
  }
}