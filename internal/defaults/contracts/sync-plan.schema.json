{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "action_items",
    "file_modifications",
    "new_documentation_requirements",
    "review_checklists",
    "automation_suggestions"
  ],
  "properties": {
    "action_items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "priority",
          "effort",
          "dependencies",
          "assignee_type"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          },
          "effort": {
            "type": "string",
            "enum": [
              "small",
              "medium",
              "large",
              "extra_large"
            ]
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "assignee_type": {
            "type": "string",
            "enum": [
              "developer",
              "tech_writer",
              "product_manager",
              "designer"
            ]
          },
          "deliverables": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "success_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "file_modifications": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "file_path",
          "modification_type",
          "changes_needed"
        ],
        "properties": {
          "file_path": {
            "type": "string"
          },
          "modification_type": {
            "type": "string",
            "enum": [
              "update",
              "create",
              "delete",
              "restructure"
            ]
          },
          "changes_needed": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "backup_required": {
            "type": "boolean"
          },
          "review_required": {
            "type": "boolean"
          },
          "testing_impact": {
            "type": "string"
          }
        }
      }
    },
    "new_documentation_requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "doc_type",
          "target_audience",
          "content_outline"
        ],
        "properties": {
          "doc_type": {
            "type": "string",
            "enum": [
              "api_reference",
              "user_guide",
              "tutorial",
              "troubleshooting",
              "faq",
              "example",
              "migration_guide"
            ]
          },
          "target_audience": {
            "type": "string",
            "enum": [
              "developers",
              "end_users",
              "admins",
              "contributors",
              "all"
            ]
          },
          "content_outline": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "format": {
            "type": "string",
            "enum": [
              "markdown",
              "html",
              "rst",
              "interactive"
            ]
          },
          "integration_points": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "maintenance_frequency": {
            "type": "string"
          }
        }
      }
    },
    "review_checklists": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "checklist_name",
          "applies_to",
          "items"
        ],
        "properties": {
          "checklist_name": {
            "type": "string"
          },
          "applies_to": {
            "type": "string",
            "enum": [
              "code_changes",
              "doc_updates",
              "new_features",
              "api_changes",
              "releases"
            ]
          },
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "mandatory": {
            "type": "boolean"
          },
          "automation_possible": {
            "type": "boolean"
          }
        }
      }
    },
    "automation_suggestions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "automation_type",
          "description",
          "implementation_effort"
        ],
        "properties": {
          "automation_type": {
            "type": "string",
            "enum": [
              "ci_check",
              "git_hook",
              "doc_generation",
              "link_validation",
              "sync_verification"
            ]
          },
          "description": {
            "type": "string"
          },
          "implementation_effort": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          },
          "tools_required": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "maintenance_overhead": {
            "type": "string"
          },
          "roi_estimate": {
            "type": "string"
          }
        }
      }
    }
  }
}