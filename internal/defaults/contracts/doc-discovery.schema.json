{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["public_apis", "existing_docs", "package_structure", "examples_in_tests"],
  "properties": {
    "public_apis": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["package", "name", "type", "documented"],
        "properties": {
          "package": { "type": "string" },
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["func", "type", "const"] },
          "documented": { "type": "boolean" }
        }
      }
    },
    "existing_docs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "package_structure": { "type": "object" },
    "examples_in_tests": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
