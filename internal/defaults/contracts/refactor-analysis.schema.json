{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["target_files", "affected_callers", "existing_tests", "integration_points", "risk_assessment"],
  "properties": {
    "target_files": {
      "type": "array",
      "items": { "type": "string" }
    },
    "affected_callers": {
      "type": "array",
      "items": { "type": "string" }
    },
    "existing_tests": {
      "type": "array",
      "items": { "type": "string" }
    },
    "integration_points": {
      "type": "array",
      "items": { "type": "string" }
    },
    "risk_assessment": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    }
  }
}
