{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bug Investigation",
  "description": "Structured bug investigation for auto-fix pipeline",
  "type": "object",
  "required": ["bug_description", "root_cause", "affected_code", "fix_approach", "timestamp"],
  "properties": {
    "bug_description": { "type": "string", "minLength": 5 },
    "root_cause": {
      "type": "object",
      "required": ["description", "location", "category"],
      "properties": {
        "description": { "type": "string", "minLength": 10 },
        "location": { "type": "string", "minLength": 1 },
        "category": {
          "type": "string",
          "enum": ["nil_check", "race_condition", "logic_error", "edge_case", "type_error", "resource_leak", "other"]
        }
      }
    },
    "affected_code": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["file", "function"],
        "properties": {
          "file": { "type": "string", "minLength": 1 },
          "function": { "type": "string" },
          "line": { "type": "integer", "minimum": 1 },
          "role": { "type": "string" }
        }
      }
    },
    "related_patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": { "type": "string" },
          "line": { "type": "integer" },
          "description": { "type": "string" }
        }
      }
    },
    "fix_approach": {
      "type": "object",
      "required": ["description", "files_to_modify"],
      "properties": {
        "description": { "type": "string", "minLength": 5 },
        "files_to_modify": { "type": "array", "minItems": 1, "items": { "type": "string" } },
        "regression_test": { "type": "string" },
        "risk": { "type": "string", "enum": ["low", "medium", "high"] }
      }
    },
    "branch_name": { "type": "string", "minLength": 5 },
    "timestamp": { "type": "string", "format": "date-time" }
  }
}
