{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Documentation navigation and analysis results",
  "required": [
    "documentation_inventory",
    "code_mapping",
    "coverage_gaps",
    "outdated_content"
  ],
  "properties": {
    "documentation_inventory": {
      "type": "array",
      "description": "Complete inventory of documentation files in the project",
      "items": {
        "type": "object",
        "required": [
          "path",
          "type",
          "purpose",
          "last_modified",
          "size_lines"
        ],
        "properties": {
          "path": {
            "type": "string",
            "description": "File path relative to project root"
          },
          "type": {
            "type": "string",
            "enum": [
              "README",
              "API_DOC",
              "GUIDE",
              "REFERENCE",
              "CHANGELOG",
              "OTHER"
            ],
            "description": "Type of documentation"
          },
          "purpose": {
            "type": "string",
            "description": "Purpose and scope of this documentation"
          },
          "last_modified": {
            "type": "string",
            "description": "Last modification date or commit hash"
          },
          "size_lines": {
            "type": "integer",
            "description": "Number of lines in the file"
          }
        }
      }
    },
    "code_mapping": {
      "type": "object",
      "description": "Mapping between code components and their documentation",
      "required": [
        "modules_documented",
        "modules_undocumented",
        "api_coverage"
      ],
      "properties": {
        "modules_documented": {
          "type": "array",
          "description": "Code modules that have corresponding documentation",
          "items": {
            "type": "object",
            "required": [
              "module_path",
              "doc_files",
              "coverage_quality"
            ],
            "properties": {
              "module_path": {
                "type": "string",
                "description": "Path to the code module"
              },
              "doc_files": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Related documentation files"
              },
              "coverage_quality": {
                "type": "string",
                "enum": [
                  "excellent",
                  "good",
                  "fair",
                  "poor"
                ],
                "description": "Quality of documentation coverage"
              }
            }
          }
        },
        "modules_undocumented": {
          "type": "array",
          "description": "Code modules lacking documentation",
          "items": {
            "type": "string"
          }
        },
        "api_coverage": {
          "type": "object",
          "description": "API documentation coverage analysis",
          "required": [
            "total_endpoints",
            "documented_endpoints",
            "missing_examples"
          ],
          "properties": {
            "total_endpoints": {
              "type": "integer",
              "description": "Total number of API endpoints"
            },
            "documented_endpoints": {
              "type": "integer",
              "description": "Number of documented endpoints"
            },
            "missing_examples": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Endpoints missing usage examples"
            }
          }
        }
      }
    },
    "coverage_gaps": {
      "type": "array",
      "description": "Identified gaps in documentation coverage",
      "items": {
        "type": "object",
        "required": [
          "area",
          "severity",
          "description",
          "impact"
        ],
        "properties": {
          "area": {
            "type": "string",
            "description": "Area of the codebase with missing documentation"
          },
          "severity": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ],
            "description": "Severity of the documentation gap"
          },
          "description": {
            "type": "string",
            "description": "Description of what documentation is missing"
          },
          "impact": {
            "type": "string",
            "description": "Impact on users or developers"
          }
        }
      }
    },
    "outdated_content": {
      "type": "array",
      "description": "Documentation content that appears outdated",
      "items": {
        "type": "object",
        "required": [
          "file_path",
          "issue",
          "evidence",
          "suggested_fix"
        ],
        "properties": {
          "file_path": {
            "type": "string",
            "description": "Path to file with outdated content"
          },
          "issue": {
            "type": "string",
            "description": "Description of the outdated content"
          },
          "evidence": {
            "type": "string",
            "description": "Evidence that content is outdated"
          },
          "suggested_fix": {
            "type": "string",
            "description": "Suggested approach to fix the issue"
          }
        }
      }
    }
  }
}