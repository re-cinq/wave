{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Implementation Plan (Lean)",
  "description": "Lean implementation plan for the implement pipeline",
  "type": "object",
  "required": ["task", "steps", "branch_name", "commit_message", "timestamp"],
  "properties": {
    "task": { "type": "string", "minLength": 5 },
    "exploration": {
      "type": "object",
      "properties": {
        "related_files": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "reason"],
            "properties": {
              "path": { "type": "string" },
              "reason": { "type": "string" }
            }
          }
        },
        "patterns": { "type": "array", "items": { "type": "string" } },
        "constraints": { "type": "array", "items": { "type": "string" } }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "files"],
        "properties": {
          "id": { "type": "string", "pattern": "^S[0-9]{2}$" },
          "title": { "type": "string", "minLength": 3 },
          "description": { "type": "string", "minLength": 10 },
          "files": { "type": "array", "minItems": 1, "items": { "type": "string" } },
          "tests": { "type": "array", "items": { "type": "string" } },
          "acceptance": { "type": "array", "items": { "type": "string" } },
          "complexity": { "type": "string", "enum": ["S", "M", "L"] }
        }
      }
    },
    "branch_name": { "type": "string", "minLength": 5 },
    "commit_message": { "type": "string", "minLength": 10 },
    "total_complexity": { "type": "string", "enum": ["S", "M", "L", "XL"] },
    "risks": { "type": "array", "items": { "type": "string" } },
    "timestamp": { "type": "string", "format": "date-time" }
  }
}
