{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Analysis results from navigating the project structure for testing",
  "required": [
    "project_name",
    "entry_points",
    "directories",
    "existing_tests"
  ],
  "properties": {
    "project_name": {
      "type": "string",
      "description": "Name of the project being analyzed"
    },
    "entry_points": {
      "type": "array",
      "description": "Main entry points of the application",
      "items": {
        "type": "object",
        "required": [
          "path",
          "description"
        ],
        "properties": {
          "path": {
            "type": "string",
            "description": "File path relative to project root"
          },
          "description": {
            "type": "string",
            "description": "Purpose of this entry point"
          }
        }
      }
    },
    "directories": {
      "type": "array",
      "description": "Key directories in the project",
      "items": {
        "type": "object",
        "required": [
          "path",
          "purpose"
        ],
        "properties": {
          "path": {
            "type": "string",
            "description": "Directory path relative to project root"
          },
          "purpose": {
            "type": "string",
            "description": "Purpose of this directory"
          }
        }
      }
    },
    "existing_tests": {
      "type": "array",
      "description": "Test files that already exist in the project",
      "items": {
        "type": "object",
        "required": [
          "path",
          "type"
        ],
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the test file"
          },
          "type": {
            "type": "string",
            "enum": [
              "unit",
              "integration",
              "e2e",
              "unknown"
            ],
            "description": "Type of test"
          }
        }
      }
    }
  }
}