{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Final report summarizing the test pipeline execution",
  "required": [
    "status",
    "steps_completed",
    "summary",
    "timestamp"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "success",
        "partial",
        "failed"
      ],
      "description": "Overall status of the pipeline execution"
    },
    "steps_completed": {
      "type": "array",
      "description": "List of pipeline steps that completed successfully",
      "items": {
        "type": "object",
        "required": [
          "step_id",
          "completed",
          "notes"
        ],
        "properties": {
          "step_id": {
            "type": "string",
            "description": "Identifier of the pipeline step"
          },
          "completed": {
            "type": "boolean",
            "description": "Whether the step completed successfully"
          },
          "notes": {
            "type": "string",
            "description": "Additional notes about this step's execution"
          }
        }
      }
    },
    "summary": {
      "type": "string",
      "description": "Human-readable summary of the pipeline execution"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the report was generated"
    }
  }
}