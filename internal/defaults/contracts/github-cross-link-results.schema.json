{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHub Cross-Link Results",
  "description": "Schema for results of applying cross-links to GitHub issues",
  "type": "object",
  "required": ["repository", "links_created", "total_processed", "total_linked"],
  "properties": {
    "repository": {
      "type": "object",
      "required": ["owner", "name"],
      "properties": {
        "owner": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "links_created": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from_issue", "to_issue", "relationship_type", "comment_added"],
        "properties": {
          "from_issue": {
            "type": "integer",
            "minimum": 1
          },
          "to_issue": {
            "type": "integer",
            "minimum": 1
          },
          "relationship_type": {
            "type": "string"
          },
          "comment_added": {
            "type": "boolean"
          },
          "comment_url": {
            "type": "string",
            "format": "uri"
          },
          "bidirectional": {
            "type": "boolean",
            "description": "Whether links were added in both directions"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "duplicates_closed": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "duplicate_issue": {
            "type": "integer"
          },
          "original_issue": {
            "type": "integer"
          },
          "closed": {
            "type": "boolean"
          }
        }
      }
    },
    "total_processed": {
      "type": "integer",
      "minimum": 0
    },
    "total_linked": {
      "type": "integer",
      "minimum": 0
    },
    "skipped": {
      "type": "integer",
      "minimum": 0
    },
    "skip_reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "total_errors": {
      "type": "integer",
      "minimum": 0
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "issue": {
            "type": "integer"
          },
          "error": {
            "type": "string"
          }
        }
      }
    }
  }
}
