{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "test_cases",
    "acceptance_criteria",
    "test_data"
  ],
  "properties": {
    "test_cases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "description",
          "category",
          "expected_result"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": [
              "valid",
              "invalid",
              "edge_case",
              "performance"
            ]
          },
          "input": {
            "type": "string"
          },
          "expected_result": {
            "type": "string"
          },
          "error_type": {
            "type": "string"
          }
        }
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of acceptance criteria for the JSON linter tests"
    },
    "test_data": {
      "type": "object",
      "properties": {
        "valid_samples": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "invalid_samples": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "edge_cases": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "description": "Sample JSON data for testing"
    },
    "performance_requirements": {
      "type": "object",
      "properties": {
        "max_execution_time": {
          "type": "string"
        },
        "memory_limits": {
          "type": "string"
        }
      }
    }
  }
}