{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "tasks",
    "tools",
    "structure",
    "execution_strategy"
  ],
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "description",
          "order",
          "dependencies"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "order": {
            "type": "integer"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "estimated_effort": {
            "type": "string"
          },
          "files_to_create": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "tools": {
      "type": "object",
      "properties": {
        "linter": {
          "type": "string"
        },
        "test_runner": {
          "type": "string"
        },
        "json_validator": {
          "type": "string"
        }
      }
    },
    "structure": {
      "type": "object",
      "properties": {
        "test_directory": {
          "type": "string"
        },
        "config_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "test_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "execution_strategy": {
      "type": "object",
      "properties": {
        "setup_steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "test_execution": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "validation_steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}