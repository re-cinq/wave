{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHub PR Draft",
  "description": "Schema for drafted pull request content",
  "type": "object",
  "required": ["title", "body", "head", "base"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "PR title, should be clear and concise"
    },
    "body": {
      "type": "string",
      "minLength": 50,
      "description": "PR body in markdown format with sections"
    },
    "head": {
      "type": "string",
      "minLength": 1,
      "description": "Source branch name"
    },
    "base": {
      "type": "string",
      "minLength": 1,
      "description": "Target branch name (usually main)"
    },
    "draft": {
      "type": "boolean",
      "description": "Whether this is a draft PR"
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Suggested labels for the PR"
    },
    "reviewers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Suggested reviewers"
    },
    "related_issues": {
      "type": "array",
      "items": {
        "type": "integer"
      },
      "description": "Issue numbers this PR addresses"
    },
    "breaking_changes": {
      "type": "boolean",
      "description": "Whether this PR includes breaking changes"
    }
  }
}
