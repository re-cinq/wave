{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Authentication system specification document",
  "required": [
    "overview",
    "architecture",
    "security_analysis",
    "recommendations"
  ],
  "properties": {
    "overview": {
      "type": "object",
      "description": "High-level overview of the authentication system",
      "required": [
        "summary",
        "auth_methods",
        "scope"
      ],
      "properties": {
        "summary": {
          "type": "string",
          "description": "Executive summary of the authentication system"
        },
        "auth_methods": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Authentication methods supported"
        },
        "scope": {
          "type": "string",
          "description": "What parts of the application are protected by authentication"
        }
      }
    },
    "architecture": {
      "type": "object",
      "description": "Architectural details of the authentication system",
      "required": [
        "components",
        "data_stores",
        "integration_points"
      ],
      "properties": {
        "components": {
          "type": "array",
          "description": "Key components in the authentication architecture",
          "items": {
            "type": "object",
            "required": [
              "name",
              "responsibility",
              "interfaces"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "responsibility": {
                "type": "string"
              },
              "interfaces": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "data_stores": {
          "type": "array",
          "description": "Where authentication data is stored",
          "items": {
            "type": "object",
            "required": [
              "name",
              "type",
              "data_stored"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "data_stored": {
                "type": "string"
              }
            }
          }
        },
        "integration_points": {
          "type": "array",
          "description": "How authentication integrates with other systems",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "security_analysis": {
      "type": "object",
      "description": "Security analysis of the authentication system",
      "required": [
        "strengths",
        "weaknesses",
        "threats"
      ],
      "properties": {
        "strengths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Security strengths identified"
        },
        "weaknesses": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Security weaknesses or gaps identified"
        },
        "threats": {
          "type": "array",
          "description": "Potential threats to the authentication system",
          "items": {
            "type": "object",
            "required": [
              "threat",
              "severity",
              "mitigation_status"
            ],
            "properties": {
              "threat": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": [
                  "low",
                  "medium",
                  "high",
                  "critical"
                ]
              },
              "mitigation_status": {
                "type": "string",
                "enum": [
                  "mitigated",
                  "partially_mitigated",
                  "unmitigated"
                ]
              }
            }
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Recommendations for improving the authentication system",
      "items": {
        "type": "object",
        "required": [
          "title",
          "description",
          "priority",
          "effort"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "Short title for the recommendation"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the recommendation"
          },
          "priority": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ],
            "description": "Priority level for implementing this recommendation"
          },
          "effort": {
            "type": "string",
            "enum": [
              "small",
              "medium",
              "large"
            ],
            "description": "Estimated implementation effort"
          }
        }
      }
    }
  }
}