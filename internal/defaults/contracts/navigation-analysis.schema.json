{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "files",
    "patterns",
    "dependencies",
    "impact_areas"
  ],
  "properties": {
    "files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of relevant files for JSON linting"
    },
    "patterns": {
      "type": "object",
      "properties": {
        "json_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "config_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "test_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "description": "Categorized file patterns"
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "linting_tools": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "test_frameworks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "json_parsers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "description": "External dependencies and tools"
    },
    "impact_areas": {
      "type": "object",
      "properties": {
        "validation": {
          "type": "string"
        },
        "performance": {
          "type": "string"
        },
        "error_handling": {
          "type": "string"
        },
        "integration": {
          "type": "string"
        }
      },
      "description": "Areas that will be impacted by JSON linting tests"
    }
  }
}